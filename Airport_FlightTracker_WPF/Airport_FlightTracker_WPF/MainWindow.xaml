<Window x:Class="Airport_FlightTracker_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Airport Flight Tracker" Height="400" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <!-- Message / Stretch -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Airport Flight Tracker - Check-In" 
                   FontSize="26" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Passenger Details -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Passenger Name:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="txtPassengerName" Grid.Column="1" Margin="0,5"/>

            <TextBlock Grid.Column="2" Text="Seat Number:" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <TextBox x:Name="txtSeatNumber" Grid.Column="3" Margin="0,5"/>
        </Grid>

        <!-- Buttons -->
        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,20">
            <Button x:Name="btnBoarded" Content="Boarded (Sync)" Width="120" Margin="10" Click="btnBoarded_Click"/>
            <Button x:Name="btnBoardedAsync" Content="Boarded (Async)" Width="120" Margin="10" Click="btnBoardedAsync_Click"/>
            <Button x:Name="btnCanceled" Content="Cancelled" Width="120" Margin="10"/>
            <Button x:Name="btnViewFlight" Content="View Boarded List" Width="140" Margin="10"/>
            <Button x:Name="btnViewCancelled" Content="View Cancelled List" Width="160" Margin="10"/>
            <Button x:Name="btnVisaCheck" Content="Check Visa Info" Width="140" Margin="10" Click="btnVisaCheck_Click"/>
        </WrapPanel>

        <!-- Feedback / Status Message -->
        <TextBlock x:Name="ShowMessage" Grid.Row="3" 
                   Text="" Foreground="DarkGreen" FontWeight="SemiBold" 
                   HorizontalAlignment="Center" TextWrapping="Wrap" />
    </Grid>
</Window>