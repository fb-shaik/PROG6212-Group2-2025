<Window x:Class="Attributes_Employee_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Attributes_Employee_App"
        Title="Employee Form" Height="621" Width="400" WindowStartupLocation="CenterScreen">

    <DockPanel Margin="20">
        <GroupBox Header="Employee Details" DockPanel.Dock="Top" Padding="10" FontWeight="Bold">
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Height="28" Margin="0,5"
                         Text="{Binding Id, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" ToolTip="13-digit ID"/>

                <Label Grid.Row="1" Grid.Column="0" Content="First Name:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Height="28" Margin="0,5"
                         Text="{Binding FName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" ToolTip="First Name"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Surname:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Height="28" Margin="0,5"
                         Text="{Binding SName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" ToolTip="Surname"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Email:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Height="28" Margin="0,5"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" ToolTip="Email Address"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Phone:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" Height="28" Margin="0,5"
                         Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" ToolTip="Phone Number"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Salary:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="1" Height="28" Margin="0,5"
                         Text="{Binding Salary, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" ToolTip="Monthly Salary"/>
            </Grid>
        </GroupBox>

        <Button Content="Validate" Click="Validate_Click" Height="35" Margin="0,10" DockPanel.Dock="Top"/>

        <TextBlock x:Name="ResultText"
                   TextWrapping="Wrap"
                   FontSize="14"
                   Margin="0,10,0,0"
                   Foreground="DarkGreen"/>
    </DockPanel>
</Window>
