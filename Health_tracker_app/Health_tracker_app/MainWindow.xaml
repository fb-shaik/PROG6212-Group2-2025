<Window x:Class="Health_tracker_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Health Tracker" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Form -->
        <GroupBox Header="Add Device" FontWeight="Bold" Padding="10" Margin="0 0 0 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="5">
                    <TextBlock Text="Device Name" FontWeight="SemiBold"/>
                    <TextBox x:Name="DeviceNameBox" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock Text="Step Count" FontWeight="SemiBold"/>
                    <TextBox x:Name="StepCountBox"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="5">
                    <TextBlock Text="Confidence (0-1)" FontWeight="SemiBold"/>
                    <TextBox x:Name="ConfidenceBox"/>
                </StackPanel>

                <Button Grid.Column="3"
                        Content="Add Device"
                        Click="AddDevice_Click"
                        Margin="10 20 0 0"
                        Width="100"
                        HorizontalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- List of Devices -->
        <GroupBox Header="Tracked Devices" Grid.Row="1" FontWeight="Bold" Padding="10" Margin="0 0 0 10">
            <ListView x:Name="DeviceList" Height="250" FontSize="14">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Padding="4"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>

        <!-- Actions + Summary -->
        <StackPanel Grid.Row="2" Margin="0 10 0 0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 10">
                <Button Content="Combine Devices" Click="CombineDevices_Click" Margin="10" Padding="10,5" Width="160"/>
                <Button Content="Boost Steps" Click="BoostSteps_Click" Margin="10" Padding="10,5" Width="160"/>
            </StackPanel>

            <TextBlock x:Name="SummaryText"
                       TextAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="DarkGreen"/>
        </StackPanel>
    </Grid>
</Window>
