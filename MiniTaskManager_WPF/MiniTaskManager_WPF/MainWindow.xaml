<Window x:Class="MiniTaskManager_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Task Manager" Height="600" Width="800"
        Background="#F9F9F9" FontFamily="Segoe UI" FontSize="14">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Controls -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
            <TextBox x:Name="txtSearch" Width="180" Margin="0,0,10,0" 
                     TextChanged="Search_TextChanged"
                     ToolTip="Search by process name..."/>
            <TextBox x:Name="txtProcessName" Width="180" Margin="0,0,10,0"
                     ToolTip="Enter process name to start (e.g. notepad)"/>
            <Button Content="Start" Width="80" Click="StartProcess_Click" Margin="0,0,10,0"/>
            <Button Content="Refresh" Width="80" Click="RefreshProcessList_Click"/>
        </StackPanel>

        <!-- DataGrid for Processes -->
        <DataGrid x:Name="dgProcesses" Grid.Row="1"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  SelectionMode="Single" SelectionChanged="dgProcesses_SelectionChanged"
                  Margin="0,0,0,10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Process Name" Binding="{Binding ProcessName}" Width="*"/>
                <DataGridTextColumn Header="PID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Memory (MB)" Binding="{Binding MemoryMB}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom Panel -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Left">
            <Button Content="Kill Selected" Width="120" Click="KillSelected_Click"/>
            <TextBlock x:Name="txtMemoryUsage" Margin="20,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
