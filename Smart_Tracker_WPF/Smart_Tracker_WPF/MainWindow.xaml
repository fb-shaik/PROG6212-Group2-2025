<Window x:Class="Smart_Tracker_WPF.MainWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Parcel Tracker" Height="450" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Parcel Input Row -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" HorizontalAlignment="Center">
            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="Parcel 1 (L×W×H)" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBox x:Name="Length1" Width="50" Text="10" Margin="0,0,5,0"/>
                    <TextBox x:Name="Width1" Width="50" Text="5" Margin="0,0,5,0"/>
                    <TextBox x:Name="Height1" Width="50" Text="3"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="Parcel 2 (L×W×H)" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBox x:Name="Length2" Width="50" Text="7" Margin="0,0,5,0"/>
                    <TextBox x:Name="Width2" Width="50" Text="4" Margin="0,0,5,0"/>
                    <TextBox x:Name="Height2" Width="50" Text="6"/>
                </StackPanel>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Dynamic Info (weight or note)" FontWeight="Bold"/>
                <TextBox x:Name="DynamicInput" Width="150" Text="15" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Button Row -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="➕ Combine Parcels" Width="150" Margin="0,0,20,0" Click="CombineParcels_Click"/>
            <Button Content="🧠 Process Info" Width="150" Margin="0,0,20,0" Click="ProcessDynamic_Click"/>
            <Button Content="📄 Generate Summary" Width="150" Click="GenerateSummary_Click"/>
        </StackPanel>

        <!-- Output Box -->
        <TextBox x:Name="OutputBox"
                 Grid.Row="2"
                 Margin="10"
                 FontFamily="Consolas"
                 FontSize="14"
                 Background="Black"
                 Foreground="Lime"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
