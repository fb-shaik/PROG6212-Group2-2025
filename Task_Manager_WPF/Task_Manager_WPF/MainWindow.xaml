<Window x:Class="Task_Manager_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Task Manager" Height="600" Width="800"
        Background="#F9F9F9" FontFamily="Segoe UI" FontSize="14">

    <!-- Main container with padding -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top Controls -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom Controls -->
        </Grid.RowDefinitions>

        <!-- Top Controls Panel -->
        <WrapPanel Grid.Row="0" Margin="0,0,0,10" Orientation="Horizontal" ItemHeight="32" VerticalAlignment="Top">

            <!-- Search -->
            <StackPanel Orientation="Horizontal" Margin="0,0,10,5" VerticalAlignment="Center">
                <Label Content="Search:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSearch" Width="160" TextChanged="Search_TextChanged"
                         ToolTip="Search by process name..." Margin="5,0,0,0"/>
            </StackPanel>

            <!-- Start Process -->
            <StackPanel Orientation="Horizontal" Margin="0,0,10,5" VerticalAlignment="Center">
                <Label Content="Start Process:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtProcessName" Width="160" ToolTip="e.g. notepad" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5" VerticalAlignment="Center">
                <Button Content="Start" Width="80" Click="StartProcess_Click" Margin="0,0,10,0"/>
                <Button Content="Refresh" Width="80" Click="RefreshProcessList_Click"/>
            </StackPanel>
        </WrapPanel>

        <!-- Process DataGrid -->
        <DataGrid x:Name="dgProcesses" Grid.Row="1"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  SelectionMode="Single" SelectionChanged="dgProcesses_SelectionChanged"
                  Margin="0,0,0,10" IsReadOnly="True"
                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Process Name" Binding="{Binding ProcessName}" Width="*"/>
                <DataGridTextColumn Header="PID" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Memory (MB)" Binding="{Binding MemoryMB}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom Panel: Kill Button + Memory Display -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Left">
            <Button Content="Kill Selected" Width="120" Click="KillSelected_Click"/>
            <TextBlock x:Name="txtMemoryUsage" Margin="20,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
